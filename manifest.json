{
  "content_scripts": [ 
    {
        "js": [ "jquery.min.js", "skimpenny.js" ],
        "matches": [ "*://www.ldlc.com/fiche/*", 
          "*://ldlc.com/fiche/*", 
          "*://shop.hardware.fr/fiche/*", 
          "*://www.cdiscount.com/*/*/*/f-*",
          "*://www.conrad.fr/ce/fr/product/*/*",
          "*://store.nike.com/*/pid-*/pgid-*",
          "*://www.grosbill.com/4-*" ]
      }],
   
   "icons": {
      "128": "img/sp128.png",
      "16": "img/sp16.png",
      "48": "img/sp48.png"
   },
   "manifest_version": 2,

   "name": "SkimPenny Price Tracker",

   "short_name": "SkimPenny",

   "description": "Shows you the price evolution of items",

   "permissions": [ "storage", "tabs", "*://waxence.fr/*"],

   "version": "0.5.0",

   "page_action": {
          "default_title": "Worth buying?",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
    },

   "web_accessible_resources": [ 
    ],
   "background":{
    "scripts" : ["jquery.min.js", "eventPage.js"],
    "persistent": false
   },
    "options_ui": {
      "page": "settings.html",
      "chrome_style": true
   }
}
