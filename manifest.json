{
  "content_scripts": [ 
    {
        "js": [ "jquery.min.js", "scrooge.js" ],
        "matches": [ "*://www.ldlc.com/fiche/*", "*://ldlc.com/fiche/*", "*://shop.hardware.fr/fiche/*" ]
      }],
   
   "icons": {
      "128": "img/scrooge128.png",
      "16": "img/scrooge16.png",
      "48": "img/scrooge48.png"
   },
   "manifest_version": 2,

   "name": "Scrooge Tracker",

   "short_name": "Scrooge",

   "description": "Shows you the price evolution of items",

   "permissions": [ "storage", "tabs","*://ldlc.com/*", "*://scroogealpha.esy.es/*" ],

   "version": "0.1.0",

   "page_action": {
          "default_title": "Worth buying?",      // optional; shown in tooltip
          "default_popup": "popup.html"        // optional
    },

   "web_accessible_resources": [ 
    ],
   "background":{
    "scripts" : ["jquery.min.js", "eventPage.js"],
    "persistent": false
   },
    "options_ui": {
      "page": "settings.html",
      "chrome_style": true
   }
}
