{
  "content_scripts": [ 
    {
        "js": [ "jquery.min.js", "skimpenny.js" ],
        "matches": [ "*://www.ldlc.com/fiche/*", 
          "*://ldlc.com/fiche/*", 
          "*://shop.hardware.fr/fiche/*", 
          "*://www.cdiscount.com/*/*/*/f-*",
          "*://www.conrad.fr/ce/fr/product/*/*",
          "*://store.nike.com/*/pid-*/pgid-*",
          "*://www.grosbill.com/4-*",
          "*://www.undiz.com/*/*/*.html",
          "*://*.romwe.com/*-p-*-cat-*.html*",
          "*://www.amazon.fr/*/dp/*",
          "*://www.amazon.fr/gp/product/*",
          "*://www.amazon.fr/dp/*",
          "*://www.amazon.com/*/dp/*",
          "*://www.amazon.com/gp/product/*",
          "*://www.amazon.com/dp/*",
          "*://www.amazon.co.uk/*/dp/*",
          "*://www.amazon.co.uk/gp/product/*",
          "*://www.amazon.co.uk/dp/*",
          "*://www.zalando.fr/*.html*",
          "*://www.caseking.de/*.html*",
          "*://www.gearbest.com/*/pp_*.html*" ]
      }],
   
   "icons": {
      "128": "img/sp128.png",
      "16": "img/sp16.png",
      "48": "img/sp48.png"
   },
   "manifest_version": 2,

   "name": "SkimPenny Price Tracker",

   "short_name": "SkimPenny",

   "description": "Shows you the price evolution of items",

   "permissions": [ "storage", "tabs", "*://waxence.fr/*"],

   "version": "0.5.0.10",

   "page_action": {
      "default_title": "Worth buying?",
      "default_popup": "popup.html"
    },

   "web_accessible_resources": [ ],
   
   "background":{
    "scripts" : ["jquery.min.js", "eventPage.js"],
    "persistent": false
   },
    "options_ui": {
      "page": "settings.html",
      "chrome_style": true
   }
}
